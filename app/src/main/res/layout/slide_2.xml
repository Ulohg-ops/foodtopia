<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/og_bg2"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:fitsSystemWindows="true"
        android:src="@drawable/onboarding_img2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="Deit Plan"
        android:textColor="@color/black"
        android:textSize="36dp" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="170dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="We have multiple diet plan for you to choose.Just choose suitable one achieve your ideal body."
        android:textColor="@color/og_context"
        android:textSize="18dp" />
</LinearLayout>